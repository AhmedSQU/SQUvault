@page "{id:int}"
@model ChallengeWriteupDetailsModel

<div class="container">
    <div class="writeup-detail mt-5">
        <h2 class="text-primary">@Model.Writeup.Title</h2>
        <p class="text-muted">Published on: @Model.Writeup.DatePublished.ToLongDateString()</p>

        <div class="content mt-4">
            <p>@Model.Writeup.Content</p>
        </div>

        <a href="/ChallengeWriteups" class="btn btn-secondary mt-3">Back to Write-ups</a>
    </div>
</div>
